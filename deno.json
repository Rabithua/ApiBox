{
  "tasks": {
    "dev": "deno run --watch --allow-net --allow-read --allow-env --env main.ts",
    "start": "deno run --allow-net --allow-read --allow-env --env main.ts",
    "test": "deno test tests/unit/ --allow-read --allow-env --allow-net",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "check": "deno check main.ts"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "@std/bytes": "jsr:@std/bytes@1",
    "@std/crypto": "jsr:@std/crypto@1",
    "@std/encoding": "jsr:@std/encoding@1",
    "@std/fmt/colors": "jsr:@std/fmt@1/colors",
    "@std/path": "jsr:@std/path@1",
    "postgres": "https://deno.land/x/postgres@v0.19.5/mod.ts"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-explicit-any"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  }
}
