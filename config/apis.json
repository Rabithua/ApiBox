{
  "forex": {
    "name": "外汇数据API",
    "description": "Swissquote外汇报价数据",
    "baseUrl": "https://forex-data-feed.swissquote.com/public-quotes/bboquotes",
    "auth": {
      "type": "none"
    },
    "endpoints": {
      "quote": {
        "path": "/instrument/{instrument}/{currency}",
        "method": "GET",
        "cacheDuration": 5000,
        "description": "获取指定货币对的外汇报价",
        "parameters": {
          "instrument": {
            "type": "path",
            "required": true,
            "description": "交易品种 (如: XAU, EUR, GBP)"
          },
          "currency": {
            "type": "path",
            "required": true,
            "description": "基准货币 (如: USD, EUR)"
          }
        },
        "headers": {
          "User-Agent": "ApiBox/2.0"
        }
      }
    }
  },
  "weather": {
    "name": "天气API",
    "description": "OpenWeatherMap天气数据",
    "baseUrl": "https://api.openweathermap.org/data/2.5",
    "auth": {
      "type": "apikey",
      "key": "appid",
      "value": "ENV:OPENWEATHER_API_KEY"
    },
    "endpoints": {
      "current": {
        "path": "/weather",
        "method": "GET",
        "cacheDuration": 60000,
        "description": "获取当前天气信息",
        "parameters": {
          "q": {
            "type": "query",
            "required": true,
            "description": "城市名称"
          },
          "units": {
            "type": "query",
            "required": false,
            "description": "温度单位 (metric, imperial)"
          }
        }
      },
      "forecast": {
        "path": "/forecast",
        "method": "GET",
        "cacheDuration": 300000,
        "description": "获取5天天气预报",
        "parameters": {
          "q": {
            "type": "query",
            "required": true,
            "description": "城市名称"
          },
          "units": {
            "type": "query",
            "required": false,
            "description": "温度单位 (metric, imperial)"
          }
        }
      }
    }
  },
  "httpbin": {
    "name": "HTTP测试API",
    "description": "HTTPBin.org测试API，用于测试HTTP请求",
    "baseUrl": "https://httpbin.org",
    "auth": {
      "type": "none"
    },
    "endpoints": {
      "get": {
        "path": "/get",
        "method": "GET",
        "cacheDuration": 0,
        "description": "测试GET请求，返回请求信息"
      },
      "ip": {
        "path": "/ip",
        "method": "GET",
        "cacheDuration": 30000,
        "description": "获取客户端IP地址"
      },
      "user-agent": {
        "path": "/user-agent",
        "method": "GET",
        "cacheDuration": 0,
        "description": "获取User-Agent信息"
      }
    }
  }
}
